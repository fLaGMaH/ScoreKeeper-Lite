<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fokandr.scorekeeperlite">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyActionBarTheme">
        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity android:name="com.fokandr.scorekeeperlite.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fokandr.scorekeeperlite.AddRound"
            android:label="@string/MNFAddRound"
            android:parentActivityName="com.fokandr.scorekeeperlite.MainActivity"
            android:windowSoftInputMode="stateHidden"
            />
        <activity
            android:name="com.fokandr.scorekeeperlite.AddPlayer"
            android:label="@string/MNFAddPlayer"
            android:parentActivityName="com.fokandr.scorekeeperlite.MainActivity" />
        <activity
            android:name="com.fokandr.scorekeeperlite.AddManyPlayers"
            android:label="@string/MNFAddManyPlayers"
            android:parentActivityName="com.fokandr.scorekeeperlite.MainActivity" />
        <activity
            android:name="com.fokandr.scorekeeperlite.SettingApp"
            android:label="@string/MNFSettingApp"
            android:parentActivityName="com.fokandr.scorekeeperlite.MainActivity" />
        <activity
            android:name="com.fokandr.scorekeeperlite.DeletePlayers"
            android:label="@string/MNFDeletePlayers"
            android:parentActivityName="com.fokandr.scorekeeperlite.MainActivity"/>
        <activity
            android:name="com.fokandr.scorekeeperlite.About"
            android:label="@string/MNFabout"
            android:parentActivityName="com.fokandr.scorekeeperlite.MainActivity"/>

        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
    </application>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>